    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Text Analyze</title>
</head>
<body>
    <h2>Mini text analyze</h2>
    <button onclick="textAnalyze()">Analyze</button>
    <pre id="output"></pre>

    <script>
        function textAnalyze(){
            const text = document.getElementById("paragraphInput").value;
            const totalChars = text.length;
            const totalwords = text.match(/\b\w+\b/g) || [];
            const totalWords = words.length;
            const totalSentences = (text.match(/[.!?]/g) || []).length;
            const totaluniqueWords = [...new Set(words.map((w) => w.toLowerCase()))];
            const freq = {};

            words.forEach((word) => {
                const w = word.toLowerCase();
                freq[w] = (freq[w] || 0) + 1;
            });

            const sortedFreq = Object.entries(freq).sort((a,b) => b[1] - a[1]);

            const output = `
            Total Character : ${totalChars}
            Total Words : ${totalWords}
            Total Sentence : ${totalSentences} 
            Unique Words : ${totaluniqueWords.join(" ")}
            Words Frequency : 
            ${sortedFreq.map(([word, count]) => word + ":" + count).join("\n")}
            `;
            document.getElementById("output").textContent = output;
        }
    </script>
</body>
</html>
